<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#71DDDD"
    tools:context=".MainPage">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="360dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/r1_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/l1_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="716dp"
        android:text="Notification"
        android:textColor="#0A0101"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="319dp"
        android:layout_height="54dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="116dp"
        android:gravity="center_horizontal"
        android:text="Let the trees take the sunlight
between 9 a.m to 5 p.m"
        android:textAlignment="center"
        android:textColor="#0A0101"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="272dp"
        android:layout_height="355dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="252dp"
        android:src="@drawable/image_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="188dp"
        android:text="***Small tips for today***"
        android:textColor="#4005E1"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="319dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="608dp"
        android:text=". Today, the weather is warn, not so much hard sun-light. \n. Very suitable for letting trees outside
of the door."
        android:textColor="#0A0101"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>